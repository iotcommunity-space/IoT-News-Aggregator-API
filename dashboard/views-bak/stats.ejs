<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Statistics - IoT News Dashboard</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-newspaper me-2"></i>IoT News Dashboard
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/"><i class="fas fa-home me-1"></i>Home</a>
                <a class="nav-link active" href="/stats"><i class="fas fa-chart-bar me-1"></i>Statistics</a>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <h1 class="display-4 mb-3">
                        <i class="fas fa-chart-bar me-3"></i>Dashboard Statistics
                    </h1>
                    <p class="lead">Comprehensive analytics for your IoT news platform</p>
                </div>
            </div>
        </div>
    </section>

    <div class="container my-5">
        <!-- Quick Stats -->
        <div class="row mb-5">
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="stats-number"><%= totalArticles %></div>
                    <div class="stats-label">Total Articles</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="stats-number"><%= sources.length %></div>
                    <div class="stats-label">Active Sources</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="stats-number"><%= categories.length %></div>
                    <div class="stats-label">Categories</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="stats-number"><%= recentStats.length %></div>
                    <div class="stats-label">Recent Days</div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <!-- Sources -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-newspaper me-2"></i>Articles by Source
                        </h5>
                    </div>
                    <div class="card-body">
                        <% sources.forEach(source => { %>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div>
                                    <strong><%= source.name %></strong><br>
                                    <small class="text-muted">
                                        Last: <%= moment(source.latestArticle).fromNow() %>
                                    </small>
                                </div>
                                <span class="badge bg-primary rounded-pill"><%= source.count %></span>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>
            
            <!-- Categories -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-tags me-2"></i>Top Categories
                        </h5>
                    </div>
                    <div class="card-body">
                        <% categories.forEach((category, index) => { %>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span>
                                    <span class="badge bg-secondary me-2"><%= index + 1 %></span>
                                    <%= category._id %>
                                </span>
                                <span class="badge bg-info rounded-pill"><%= category.count %></span>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
