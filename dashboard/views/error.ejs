<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Error - IoT News Dashboard by IoTCommunity.Space</title>
    <meta name="description" content="An error occurred on the IoT News Dashboard">
    <meta name="author" content="IoTCommunity.Space">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    
    <link rel="icon" type="image/png" href="https://iotcommunity.space/static/media/logo.a1fac83811e29f2f57d9.png">
</head>
<body class="error-page">
    <!-- Branded Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="https://iotcommunity.space/static/media/logo.a1fac83811e29f2f57d9.png" 
                     alt="IoTCommunity.Space Logo" 
                     height="32" 
                     class="me-2 brand-logo"
                     onerror="this.style.display='none';">
                <span class="fw-bold">IoT News Dashboard</span>
            </a>
            
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/">
                    <i class="fas fa-home me-1"></i>Home
                </a>
                <a class="nav-link" href="/stats">
                    <i class="fas fa-chart-bar me-1"></i>Statistics
                </a>
                <a class="nav-link text-warning fw-bold" href="https://iotcommunity.space/" target="_blank">
                    <i class="fas fa-external-link-alt me-1"></i>IoTCommunity.Space
                </a>
            </div>
        </div>
    </nav>

    <!-- Error Content -->
    <div class="container">
        <div class="row justify-content-center min-vh-100 align-items-center">
            <div class="col-lg-8 text-center">
                <!-- Error Icon and Branding -->
                <div class="error-branding mb-5">
                    <img src="https://iotcommunity.space/static/media/logo.a1fac83811e29f2f57d9.png" 
                         alt="IoTCommunity.Space Logo" 
                         height="80" 
                         class="mb-4 error-logo"
                         onerror="this.style.display='none';">
                    
                    <div class="error-icon-container">
                        <i class="fas fa-exclamation-triangle fa-5x text-danger mb-4 error-icon"></i>
                    </div>
                </div>

                <!-- Error Message -->
                <div class="error-message">
                    <h1 class="display-1 fw-bold text-danger mb-3">Oops!</h1>
                    <h2 class="h3 text-dark mb-4">Something went wrong</h2>
                    
                    <div class="error-details">
                        <div class="alert alert-danger border-0 shadow-sm">
                            <h4 class="alert-heading">
                                <i class="fas fa-bug me-2"></i>Error Details
                            </h4>
                            <p class="mb-0 fs-5"><%= error %></p>
                        </div>
                    </div>
                </div>

                <!-- Help Information -->
                <div class="error-help my-5">
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-home fa-2x text-primary mb-3"></i>
                                    <h5 class="card-title">Go Home</h5>
                                    <p class="card-text text-muted">Return to the main dashboard to browse IoT news articles</p>
                                    <a href="/" class="btn btn-primary">
                                        <i class="fas fa-home me-1"></i>Home Page
                                    </a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-chart-bar fa-2x text-success mb-3"></i>
                                    <h5 class="card-title">View Statistics</h5>
                                    <p class="card-text text-muted">Check platform analytics and system status</p>
                                    <a href="/stats" class="btn btn-success">
                                        <i class="fas fa-chart-bar me-1"></i>Statistics
                                    </a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-users fa-2x text-warning mb-3"></i>
                                    <h5 class="card-title">Get Support</h5>
                                    <p class="card-text text-muted">Visit our community for help and support</p>
                                    <a href="https://iotcommunity.space/" target="_blank" class="btn btn-warning text-white">
                                        <i class="fas fa-external-link-alt me-1"></i>IoT Community
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="error-actions mb-5">
                    <div class="btn-group-lg" role="group">
                        <button onclick="history.back()" class="btn btn-outline-secondary me-3">
                            <i class="fas fa-arrow-left me-2"></i>Go Back
                        </button>
                        
                        <button onclick="location.reload()" class="btn btn-primary me-3">
                            <i class="fas fa-refresh me-2"></i>Reload Page
                        </button>
                        
                        <a href="http://localhost:3000/health" target="_blank" class="btn btn-outline-info">
                            <i class="fas fa-heartbeat me-2"></i>Check System Health
                        </a>
                    </div>
                </div>

                <!-- Troubleshooting Tips -->
                <div class="troubleshooting-tips">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="mb-0 text-primary">
                                <i class="fas fa-lightbulb me-2"></i>Troubleshooting Tips
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3 text-start">
                                <div class="col-md-6">
                                    <ul class="list-unstyled">
                                        <li class="mb-2">
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            Check if the page URL is correct
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            Try refreshing the page
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            Clear your browser cache
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <ul class="list-unstyled">
                                        <li class="mb-2">
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            Check your internet connection
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            Verify system health status
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check-circle text-success me-2"></i>
                                            Contact support if issue persists
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- IoTCommunity.Space Attribution -->
                <div class="error-branding-footer mt-5">
                    <div class="d-flex justify-content-center align-items-center">
                        <img src="https://iotcommunity.space/static/media/logo.a1fac83811e29f2f57d9.png" 
                             alt="IoTCommunity.Space" 
                             height="24" 
                             class="me-2"
                             onerror="this.style.display='none';">
                        <p class="text-muted mb-0">
                            Error handling powered by 
                            <a href="https://iotcommunity.space/" target="_blank" class="text-primary text-decoration-none fw-bold">
                                IoTCommunity.Space
                            </a>
                        </p>
                    </div>
                    <p class="text-muted mt-2 small">
                        Building reliable IoT solutions for the community
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Error Reporting Modal -->
    <div class="modal fade" id="reportModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-bug me-2"></i>Report Error
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Help us improve by reporting this error:</p>
                    <div class="mb-3">
                        <label class="form-label">Error Message:</label>
                        <input type="text" class="form-control" value="<%= error %>" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Current URL:</label>
                        <input type="text" class="form-control" id="currentUrl" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Additional Details:</label>
                        <textarea class="form-control" rows="3" placeholder="Describe what you were trying to do..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <a href="https://iotcommunity.space/" target="_blank" class="btn btn-primary">
                        <i class="fas fa-external-link-alt me-1"></i>Visit Community Support
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JavaScript -->
    <script>
        // Set current URL in modal
        document.getElementById('currentUrl').value = window.location.href;

        // Error animation
        document.addEventListener('DOMContentLoaded', function() {
            const errorIcon = document.querySelector('.error-icon');
            errorIcon.style.animation = 'bounce 2s infinite';
        });

        // Auto-reload option
        let autoReloadCounter = 30;
        function startAutoReload() {
            const button = document.querySelector('.btn-primary');
            const originalText = button.innerHTML;
            
            const countdown = setInterval(() => {
                button.innerHTML = `<i class="fas fa-refresh me-2"></i>Auto Reload (${autoReloadCounter}s)`;
                autoReloadCounter--;
                
                if (autoReloadCounter <= 0) {
                    clearInterval(countdown);
                    location.reload();
                }
            }, 1000);
        }

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                history.back();
            } else if (e.key === 'r' && e.ctrlKey) {
                e.preventDefault();
                location.reload();
            } else if (e.key === 'h' && e.ctrlKey) {
                e.preventDefault();
                window.location.href = '/';
            }
        });

        // IoTCommunity.Space branding
        console.log('%c❌ IoT News Dashboard - Error Page', 'color: #e74c3c; font-size: 18px; font-weight: bold;');
        console.log('%c🌐 Error: <%= error %>', 'color: #2c3e50; font-size: 14px;');
        console.log('%c💡 Support: https://iotcommunity.space/', 'color: #27ae60; font-size: 12px;');
        console.log('%c⌨️  Shortcuts: Ctrl+R (reload), Ctrl+H (home), Esc (back)', 'color: #3498db; font-size: 10px;');
    </script>
</body>
</html>
